from db import conectar

def contar_registros():
    try:
        db = conectar()
        collections = ["gerente", "instrutores", "alunos", "planos", "treino", "pagamentos"]
        print("\nðŸ“Š SituaÃ§Ã£o do Banco de Dados:")
        for col in collections:
            total = db[col].count_documents({})
            print(f" - {col.upper():<15}: {total} registros")
    except Exception as e:
        print("Erro ao consultar o banco:", e)

